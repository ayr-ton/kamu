{
  "name": "library-ui",
  "private": true,
  "scripts": {
    "jshint": "jshint ./app/scripts/**/*.js ./test/**/*.js --config ./.jshintrc",
    "build:clean": "rm -rf ./dist/* && rm -rf ./.tmp/* && mkdir -p ./dist && mkdir -p ./dist/scripts && mkdir -p ./dist/styles",
    "build:env": "node ./scripts/environment.js",
    "build:sass": "node-sass ./app/styles/main.scss > ./dist/styles/main.css",
    "build:wiredep": "wiredep -s ./app/index.html",
    "build:minify": "usemin ./app/index.html --dest ./dist/ --output ./dist/index.html --rmlr true",
    "build:copy": "cp -rf ./app/images ./dist && cp -rf ./app/views ./dist && cp -rf ./app/templates ./dist && cp ./app/404.html ./dist && cp ./app/error.html ./dist && cp ./app/*.ico ./dist && cp ./app/*.txt ./dist/",
    "build": "npm run build:clean && npm run jshint && npm run build:env && npm run build:wiredep && npm run build:sass && npm run build:minify && npm run build:copy",
    "test:protractor": "protractor test/acceptance/protractor.conf.js",
    "test:acceptance": "./scripts/acceptance.sh",
    "test:ui:ci": "karma start test/ui/karma.conf.js --single-run --reporters spec,coverage --browsers PhantomJS",
    "test:ui:local": "karma start test/ui/karma.conf.js --reporters spec,notify --browsers PhantomJS --auto-watch",
    "test:web": "mocha -r test/web/base test/web/ --recursive -R spec",
    "test": "npm run jshint && npm run test:web && npm run test:ui:ci",
    "livereload": "live-reload --port 9091 ./app",
    "serve": "parallelshell 'npm start' 'npm run livereload'",
    "start": "npm run build && node index.js",
    "forever": "forever stopall && forever start ./bin/www",
    "postinstall": "bower install"
  },
  "dependencies": {
    "body-parser": "~1.14.2",
    "cookie-parser": "~1.4.0",
    "debug": "~2.2.0",
    "ejs": "~2.3.3",
    "express": "4.13.4",
    "express-session": "^1.11.3",
    "foobar": "^1.1.0",
    "forever": "^0.15.1",
    "grunt-cli": "^1.2.0",
    "jshint": "^2.9.1-rc2",
    "jsonwebtoken": "^5.4.0",
    "morgan": "~1.6.1",
    "nock": "^3.6.0",
    "node-sass": "^3.3.3",
    "node-sass-middleware": "^0.9.6",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "passport-saml": "git://github.com/bergie/passport-saml.git",
    "request": "^2.63.0",
    "serve-favicon": "~2.3.0",
    "usemin-cli": "0.0.7",
    "wiredep": "^3.0.0",
	"bower": "1.7.1"
  },
  "devDependencies": {
    "phantomjs": "1.9.19",
    "chai": "^3.3.0",
    "karma": "0.13.15",
    "karma-coverage": "^0.5.2",
    "karma-html2js-preprocessor": "^0.1.0",
    "karma-jasmine": "~0.3.6",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.2.2",
    "karma-spec-reporter": "0.0.23",
    "karma-wiredep": "^1.0.1",
    "live-reload": "^1.1.0",
    "mocha": "^2.3.3",
    "parallelshell": "^2.0.0",
    "protractor": "3.0.0",
    "sinon": "^1.17.1",
    "watch": "^0.17.1"
  },
  "engines": {
    "node": "5.3.0",
    "npm": "3.3.12"
  }
}
